<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context="bbs.com.xinfeng.bbswork.ui.activity.ModifyActivity">

        <include
            android:id="@+id/basebar"
            layout="@layout/base_bar"></include>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_block_color"
            android:paddingBottom="@dimen/dp8"
            android:paddingLeft="@dimen/dp28"
            android:paddingTop="@dimen/dp14"
            android:text="问题类型"
            android:textColor="@color/input_txt_lenght"
            android:textSize="@dimen/sp12" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20">

            <RadioButton
                android:id="@+id/rbtn_feedback_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp28"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/selector_setting_feedback"
                android:drawablePadding="@dimen/dp8"
                android:text="产品体验"
                android:textColor="@color/notice_content"
                android:textSize="@dimen/sp16" />

            <RadioButton
                android:id="@+id/rbtn_feedback_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp70"
                android:button="@null"
                android:drawableLeft="@drawable/selector_setting_feedback"
                android:drawablePadding="@dimen/dp8"
                android:text="产品功能"
                android:textColor="@color/notice_content"
                android:textSize="@dimen/sp16" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginTop="@dimen/dp20">

            <RadioButton
                android:id="@+id/rbtn_feedback_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp28"
                android:button="@null"
                android:drawableLeft="@drawable/selector_setting_feedback"
                android:drawablePadding="@dimen/dp8"
                android:text="账号相关"
                android:textColor="@color/notice_content"
                android:textSize="@dimen/sp16" />

            <RadioButton
                android:id="@+id/rbtn_feedback_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp70"
                android:button="@null"
                android:drawableLeft="@drawable/selector_setting_feedback"
                android:drawablePadding="@dimen/dp8"
                android:text="其他"
                android:textColor="@color/notice_content"
                android:textSize="@dimen/sp16" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp16"
            android:background="@color/line_block_color"></View>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150">

            <EditText
                android:id="@+id/edit_feedback_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:hint="我们非常重视您的宝贵意见，感谢您的支持！"
                android:paddingBottom="@dimen/dp20"
                android:paddingLeft="@dimen/dp28"
                android:paddingRight="@dimen/dp28"
                android:paddingTop="@dimen/dp20"
                android:textColor="@color/input_color"
                android:textColorHint="@color/input_hint_color"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/txt_topicintroduce_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_marginBottom="@dimen/dp16"
                android:layout_marginRight="@dimen/dp19"
                android:gravity="right"
                android:text="0/300"
                android:textColor="@color/input_txt_lenght"
                android:textSize="@dimen/sp12" />
        </FrameLayout>


        <include layout="@layout/base_lowline"></include>

        <Button
            android:id="@+id/button_feedback_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp28"
            android:layout_marginRight="@dimen/dp28"
            android:layout_marginTop="@dimen/dp26"
            android:background="@drawable/button_finish"
            android:text="发送反馈"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

    </LinearLayout>
</layout>