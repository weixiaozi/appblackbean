<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llayout_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_point_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginRight="@dimen/dp25"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center"
            android:text="有新版本"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/txt_point_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginRight="@dimen/dp25"
            android:layout_marginTop="@dimen/dp10"
            android:text="那我又有一个新的版本"
            android:textColor="@color/notify_reason"
            android:textSize="@dimen/sp13" />

        <ProgressBar
            android:id="@+id/pb_update"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp25"
            android:layout_marginRight="@dimen/dp25"
            android:layout_marginTop="@dimen/dp10"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_marginTop="@dimen/dp20"
            android:background="@color/line_low_color"></View>

        <LinearLayout
            android:id="@+id/llayout_point_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp54">

            <TextView
                android:id="@+id/txt_button_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/register_code"
                android:textSize="@dimen/sp17" />

            <View
                android:layout_width="@dimen/dp0.5"
                android:layout_height="match_parent"
                android:background="@color/line_low_color"></View>

            <TextView
                android:id="@+id/txt_button_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/register_code"
                android:textSize="@dimen/sp17" />
        </LinearLayout>
    </LinearLayout>
</layout>