<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llayout_follow_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp9"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginTop="@dimen/dp9"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <bbs.com.xinfeng.bbswork.widget.CircleImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_marginRight="@dimen/dp12"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_head_default" />

        <TextView
            android:id="@+id/txt_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="李强"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginLeft="@dimen/dp63"
        android:background="@color/line_low_color"></View>
</LinearLayout>
