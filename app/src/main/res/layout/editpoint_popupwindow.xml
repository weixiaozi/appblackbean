<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000">


        <LinearLayout
            android:id="@+id/llayout_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp51"
            android:background="@drawable/white_bg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txt_point_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp25"
                android:layout_marginRight="@dimen/dp25"
                android:layout_marginTop="@dimen/dp20"
                android:background="@null"
                android:hint="拒绝理由"
                android:padding="@dimen/dp2"
                android:textColor="@color/black"
                android:textSize="@dimen/sp14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0.5"
                android:layout_marginTop="@dimen/dp20"
                android:background="@color/line_low_color"></View>


            <LinearLayout
                android:id="@+id/llayout_point_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp54">

                <TextView
                    android:id="@+id/txt_button_left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="@color/register_code"
                    android:textSize="@dimen/sp17" />

                <View
                    android:layout_width="@dimen/dp0.5"
                    android:layout_height="match_parent"
                    android:background="@color/line_low_color"></View>

                <TextView
                    android:id="@+id/txt_button_right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/register_code"
                    android:textSize="@dimen/sp17" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>