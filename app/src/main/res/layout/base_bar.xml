<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/llayout_bar_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp43">

            <FrameLayout
                android:id="@+id/bar_left_click"
                android:layout_width="@dimen/dp80"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp12"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/bar_left_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|left"
                    android:src="@drawable/icon_back" />

                <TextView
                    android:id="@+id/bar_left_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:textColor="@color/bar_title_color"
                    android:textSize="@dimen/sp14" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/bar_txt_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/bar_title_color"
                    android:textSize="@dimen/sp17" />

                <ImageView
                    android:id="@+id/bar_iv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/bar_right_click"
                android:layout_width="@dimen/dp80"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/dp12">

                <ImageView
                    android:id="@+id/bar_right_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|right" />

                <TextView
                    android:id="@+id/bar_right_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:textColor="@color/bar_title_color"
                    android:textSize="@dimen/sp14" />
            </FrameLayout>

        </LinearLayout>

        <include layout="@layout/base_line"></include>

    </LinearLayout>

</layout>