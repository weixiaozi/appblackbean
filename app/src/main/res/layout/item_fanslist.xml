<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp54"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <FrameLayout
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_marginRight="@dimen/dp12">

            <bbs.com.xinfeng.bbswork.widget.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp36"
                android:layout_height="@dimen/dp36"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_head_default" />

            <ImageView
                android:id="@+id/iv_member_online"
                android:layout_width="@dimen/dp10"
                android:layout_height="@dimen/dp10"
                android:layout_gravity="right|bottom"
                android:src="@drawable/online_bg" />
        </FrameLayout>

        <TextView
            android:id="@+id/txt_member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp15"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="李强"
            android:textColor="@color/black"
            android:textSize="@dimen/sp15" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp15">

            <ImageView
                android:id="@+id/iv_fans_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_follow" />

            <TextView
                android:id="@+id/txt_fans_followed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="已关注"
                android:textColor="@color/input_txt_lenght"
                android:textSize="@dimen/sp14" />

        </FrameLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:layout_marginLeft="@dimen/dp63"
        android:background="@color/line_low_color"></View>

</LinearLayout>
